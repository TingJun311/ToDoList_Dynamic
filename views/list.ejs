<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">

        <% newListItems.forEach(function (todo) { %>
            <!-- forEach call back for the current item and index -->
            <form action="/checkBox" method="post">
                <div class="item">
                    <input type="hidden" name="currentList" value="<%= listTitle %>">
                    <input type="checkbox" name="deleteItem" onchange="this.form.submit()" value="<%= todo._id %>"/>
                    <p><%= todo.name %></p>
                </div>
            </form>
        <% }) %>


    <form class="item" action="/" method="post">
        <input
            type="text"
            name="newItem"
            placeholder="New Item"
            autocomplete="off"
        />
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer") -%>
